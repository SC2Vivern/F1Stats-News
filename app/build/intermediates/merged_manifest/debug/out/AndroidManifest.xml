        <activity
            android:name="com.example.f1app.F1Calendar"
            android:label="@string/title_activity_calendar"
            android:theme="@style/Theme.F1app.NoActionBar" />
        <activity
            android:name="com.example.f1app.Results"
            android:label="@string/title_activity_results"
            android:theme="@style/Theme.F1app.NoActionBar" />
        <activity
            android:name="com.example.f1app.Stats"
            android:label="@string/title_activity_stats"
            android:theme="@style/Theme.F1app.NoActionBar" />
        <activity android:name="com.example.f1app.NewsFeed" />
        <activity android:name="com.example.f1app.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>